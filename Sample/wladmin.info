regions[sidebar_second] = Right sidebar
regions[content]        = Content
regions[header]         = Header
regions[footer]         = Footer
regions[highlighted]    = Highlighted
regions[help]           = Help
regions[page_top]       = Page Top
regions[page_bottom]    = Page Bottom


; Add Custom Region

regions[outside]        = Outside
regions[modals]         = Page Modals

; Default features

features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = comment_user_verification
features[] = favicon
features[] = main_menu
features[] = secondary_menu



; Set settings on the theme-settings.php.

; Drupal default settings

settings[wladmin_logo]                      = 1
settings[wladmin_name]                      = 1
settings[wladmin_slogan]                    = 1
settings[wladmin_favicon]                   = 1
settings[wladmin_main_menu]                 = 1
settings[wladmin_secondary_menu]            = 1
settings[wladmin_node_user_picture]         = 1
settings[wladmin_comment_user_picture]      = 1
settings[wladmin_comment_user_verification] = 1

; Add Custom meta if need
; mobi / pc
; settings[mobi_meta][] = mobi
settings[toggle_theme_rebuild] = 0



