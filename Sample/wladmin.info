; Responsive style
; stylesheets[screen and (max-width: 320px)][]  = mobi.css
; stylesheets[screen and (max-width: 1024px)][] = table.css


; Add JavaScripts files.

scripts[] = bower_components/select2/dist/js/select2.full.min.js
scripts[] = js/init.js
